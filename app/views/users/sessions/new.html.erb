<head>
  <title>Educanding - Iniciar sesión</title>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="assets/stylesheets/users.css">
</head>

<body>
  <h2>Iniciar sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- Email -->
    <div class="form-group input-group">
      <label class="sr-only"> Email </label>
      <span class="input-group-addon">
        <i class="fa fa-envelope"></i> <%= f.label 'Email' %>
      </span>
      <%= f.email_field :email, required: true, autofocus: true, placeholder: 'Ingrese su email', class: 'form-control' %>
    </div>

    <!-- Contraseña -->
    <div class="form-group input-group">
      <label class="sr-only">Contraseña</label>
      <span class="input-group-addon">
        <i class="fa fa-key"></i> <%= f.label 'Contraseña' %>
      </span>
      <%= f.password_field :password, required: true, autocomplete: "off", placeholder: 'Ingrese su contraseña',class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
					<%= f.check_box :remember_me, id: "recordar"%>
					<%= f.label "Recordarme", :class => "blanco", for: "recordar" %>
      </div>
    <% end -%>

		<br>
		<div class="actions">
			<%= f.submit "Iniciar sesión", :class => 'btn btn-primary actions'%>
		</div>
  <% end %>

  <%= render "users/shared/links" %>
</body>
