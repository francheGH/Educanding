<div class="panel">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-9 text-left">
        <h2> <%=@faculty.facultad%> </h2>
      </div>
      <div class="col-sm-3 text-right">
        <h4><small><em>Creada el día <%= @faculty.created_at.strftime("%d/%m/%Y") %></em></small></h4>
      </div>
    </div>
  </div>

  <div class="panel-body">
    <ul>
      <li> Facultad: <%= @faculty.facultad %> </li>
      <li> Universidad: <%= @faculty.universidad %> </li>
      <li> Provincia: <%= @faculty.provincia %> </li>
      <li> Ciudad: <%= @faculty.ciudad %> </li>
      </br>
      <li> Visitas:<%= @faculty.visitas %></li>
      <li> Preguntas:<%= @faculty.cant_preguntas %></li>
    </ul>
  </div>

  <!--% if ¿¿puntaje de los usuarios y/o admin?? %-->
  <div class="panel-footer">
    <%= link_to "Editar", edit_faculty_path(@faculty) , class: 'btn btn-info btn-sm' %>
    <%= link_to "Eliminar", @faculty, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "¿Estas seguro?" } %>
  </div>
  <!--% end %-->
</div>
