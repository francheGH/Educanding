<div class="panel-center col-md-8">
  <div class="panel-heading">
    <div class="text-left">
      <h3> Comentar la pregunta "<%= $q.pregunta %>" </h3>
    </div>
  </div>

  <div class="panel-body">
    <%= form_for @qcomments do |qc| %>
    
      <div class="row">
        <div class="col-md-6">
          <%= qc.label :texto %>
          <%= qc.text_area :texto, required: true, class: 'form-control', label: 'Comentario', placeholder: 'Ingrese el comentario' %>
        </div>
      </div>
      </br>
          
      <%= qc.submit "Comentar", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
