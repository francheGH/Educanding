<div class="panel-center col-md-5">
  <div class="panel-heading">
    <div class="text-left">
      <h2> Crear una pregunta </h2>
    </div>
  </div>

  <div class="panel-body">
    <%= form_for @question do |q| %>
      <% if @question.errors.any? %>
        <div class="alert alert-danger devise-errors">
          <%= @question.errors.messages %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <%= q.label :pregunta %>
          <%= q.text_area :pregunta, required: true, class: 'form-control', label: 'Pregunta', placeholder: 'Ingrese la pregunta' %>
        </div>
      </div>
      </br>

      <div class="row">
        <div class="col-xs-12 form-group">
          <%= q.label :detalles %>
          <%= q.text_area :detalles, required: true,class: 'form-control', label: 'Detalles', placeholder: 'Ingrese los detalles' %>
        </div>
      </div>
      </br>

      <div class="row">
        <div class="col-xs-12 form-group">
        <%= q.label :etiquetas %>   
        <%= q.collection_select(:tag_ids, Tag.all, :id, :nombre,
                              {}, 
                              {:multiple => true, :required => true, :class => "selectTag"}) %>
      </div>

      <%= q.submit "Crear pregunta", class: 'btn btn-primary' %>
      <% end %>
  </div>
</div>