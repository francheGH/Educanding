<div class="panel">
  <div class="panel-heading">
    <div class="row">
      <div class="col-sm-9 text-left">
        <h2> <%=@tag.nombre%> </h2>
      </div>
      <div class="col-sm-3 text-right">
        <h4><small><em>Creada el día <%= @tag.created_at.strftime("%d/%m/%Y") %></em></small></h4>
      </div>
    </div>
  </div>

  <div class="panel-body">
    <ul>
      <li> Etiqueta: <%= @tag.nombre %> </li>
    </ul>
  </div>

  <!--% if ¿¿puntaje de los usuarios y/o admin?? %-->
  <div class="panel-footer">
    <%= link_to "Editar", edit_tag_path(@tag) , class: 'btn btn-info btn-sm' %>
    <%= link_to "Eliminar", @tag, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "¿Estas seguro?" } %>
  </div>
  <!--% end %-->
</div>
