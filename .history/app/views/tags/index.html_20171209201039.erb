<div class="panel col-md-9">
  <div class="panel-header" style="margin-left:10px">
    <h2> Etiquetas </h2>
  </div>
  <div class="table-responsive panel-body">
    <table class="table">
      <tr>
        <th> Etiqueta </th>
        <th> Fecha de creación </th>
        <th> Última modificación </th>
        <th> Acciones </th>
      </tr>
      <% @tags.alfab.each do |tag| %>
        <tr>
            <td> <%= truncate(tag.nombre, length: 20)%> </td>
            <td> <%= tag.created_at.strftime("%Y-%m-%d")%></td>
            <td> <%= tag.updated_at.strftime("%Y-%m-%d")%> </td>
            <td>
              <!--% if ¿¿puntaje de los usuarios y/o admin?? %-->
                <%= link_to "Editar", edit_faculty_path(tag) , class: 'btn btn-info btn-sm' %>
                <%= link_to "Eliminar", tag, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: "¿Estas seguro?" } %>
              <!--% end %-->
            </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<!-- Estos son los listados -->
<div class="col-md-3">
  <% if ((user_signed_in?) && (current_user.puntos)) %>
    <%= link_to "Crear Etiqueta", new_faculty_path, class: 'btn btn-primary' %>
    </br>
    </br>
  <% end %>
  </div>
</div>